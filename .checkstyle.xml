<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Puppy Crawl//DTD Check Configuration 1.3//EN" "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
  
  <!-- Deshabilitar la verificación de JavadocPackage -->
  <module name="TreeWalker">
    <module name="JavadocPackage">
      <property name="severity" value="ignore"/>
    </module>

    <!-- Deshabilitar la verificación de JavadocVariable -->
    <module name="JavadocVariable">
      <property name="severity" value="ignore"/>
    </module>

    <!-- Deshabilitar la verificación de DesignForExtension -->
    <module name="DesignForExtension">
      <property name="severity" value="ignore"/>
    </module>

    <!-- Deshabilitar la verificación de MissingJavadocMethod -->
    <module name="MissingJavadocMethod">
      <property name="severity" value="ignore"/>
    </module>

    <!-- Deshabilitar la verificación de FinalParameters -->
    <module name="FinalParameters">
      <property name="severity" value="ignore"/>
    </module>

    <!-- Deshabilitar la verificación de HiddenField -->
    <module name="HiddenField">
      <property name="severity" value="ignore"/>
    </module>

    <!-- Deshabilitar la verificación de MethodName -->
    <module name="MethodName">
      <property name="severity" value="ignore"/>
    </module>

    <!-- Deshabilitar la verificación de ParameterName -->
    <module name="ParameterName">
      <property name="severity" value="ignore"/>
    </module>

    <!-- Deshabilitar la verificación de LineLength -->
    <module name="LineLength">
      <property name="severity" value="ignore"/>
    </module>

    <!-- Deshabilitar la verificación de RegexpSingleline -->
    <module name="RegexpSingleline">
      <property name="severity" value="ignore"/>
    </module>

    <!-- Deshabilitar la verificación de FileTabCharacter -->
    <module name="FileTabCharacter">
      <property name="severity" value="ignore"/>
    </module>

    <!-- Deshabilitar la verificación de AvoidStarImport -->
    <module name="AvoidStarImport">
      <property name="severity" value="ignore"/>
    </module>

    <!-- Deshabilitar la verificación de UnusedImports -->
    <module name="UnusedImports">
      <property name="severity" value="ignore"/>
    </module>

    <!-- Deshabilitar la verificación de WhitespaceAround -->
    <module name="WhitespaceAround">
      <property name="severity" value="ignore"/>
    </module>

    <!-- Deshabilitar la verificación de WhitespaceAfter -->
    <module name="WhitespaceAfter">
      <property name="severity" value="ignore"/>
    </module>

  </module>
</module>
